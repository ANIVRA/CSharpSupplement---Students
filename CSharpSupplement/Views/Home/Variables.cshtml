@{
    ViewBag.Title = "C# Fundamentals";
}
<h2>@ViewBag.Title.</h2>


<h3>@ViewBag.Message</h3>

<div class="row">
    <div class="label col-xs-1 well" style="color:black; font-size:xx-large">X</div>
    <div class="col-xs-1 text-center" style="padding-top:15px; font-size:xx-large">
       = @ViewBag.X
    </div>
</div>
<form>
    <div class="row">
        <input type="submit" class="btn btn-default col-xs-1 well" style="color:black; font-size:xx-large" value="+" name="oper8r" onsubmit=""/>
        <input type="submit" class="btn btn-default col-xs-1 well" style="color:black; font-size:xx-large" value="-" name="oper8r" onsubmit=""/>
        <input type="submit" class="btn btn-default col-xs-1 well" style="color:black; font-size:xx-large" value="*" name="oper8r" onsubmit=""/>
        <input type="submit" class="btn btn-default col-xs-1 well" style="color:black; font-size:xx-large" value="/" name="oper8r" onsubmit="@Url.Action("Variables","Home")"/>
    </div>
</form>
<div class="row">
    <div class="label col-xs-1 well" style="color:black; font-size:xx-large">Y</div>
    <div class="col-xs-1 text-center" style="padding-top:15px; font-size:xx-large">
       = @ViewBag.Y
    </div>
</div>
<div class="row">
    <div class="label col-xs-2 well" style="color:black; font-size:xx-large">Result</div>
    <div class="col-xs-1 text-center" style="padding-top:15px; font-size:xx-large">
        = @ViewBag.Result
    </div>
</div>




